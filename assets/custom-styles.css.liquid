header .wrapper-top-bar-header {
  background-color: #f4f4f4;
  padding: 0.3rem;
}
header .wrapper-top-bar-header .top_bar {
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
header .wrapper-top-bar-header .top_bar > div a {
  display: flex;
  align-items: center;
  gap: 0.2rem;
}
header .header-content .dropdown {
  display: none;
}
header .header-content .dropdown.open {
  display: block !important;
}

/*========= COMMON IMPORTS ======= */
body {
  background-color: #fefefe;
  color: #212121;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Open Sans, Helvetica Neue, sans-serif;
}
body ul {
  padding: 0;
  list-style: none;
}
body p {
  margin: 0;
}
body a {
  text-decoration: none;
  color: inherit;
}

.container {
  max-width: 600px;
}
@media screen and (min-width: 767px) {
  .container {
    max-width: 100%;
  }
}
@media screen and (min-width: 997px) {
  .container {
    max-width: 768px;
  }
}
@media screen and (min-width: 1024px) {
  .container {
    max-width: 1000px;
  }
}
@media screen and (min-width: 1200px) {
  .container {
    max-width: 1024px;
  }
}
@media screen and (min-width: 1400px) {
  .container {
    max-width: 1200px;
  }
}
@media screen and (min-width: 1440px) {
  .container {
    max-width: 1440px;
  }
}