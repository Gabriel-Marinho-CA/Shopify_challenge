<h1>{{ article.title }}</h1>
<p>{{ article.created_at | date: '%B %d, %Y ' }}</p>
<div>
  {{ article.content }}
</div>

{% if article.comments_enabled? %}
  <hr/>
  <h2>Comments</h2>
  {% for user_comment in article.comments %}
    <div>
      <h3>
        {{ user_comment.author }}
      </h3>
      <p>
        {{ user_comment.email }}
      </p>
      <div>
        {{ user_comment.content }}
      </div>

    </div>
  {% endfor %}
  <hr/>
  <h2>Leave a comment</h2>
  {% form 'new_comment', article %}
    {{ form.errors | default_errors }}

    <div class="name">
      <label for="name">Name</label>
      <input
        type="text"
        name="comment[author]"
        value="{{form.author}}" />
    </div>
    <div class="email">
      <label for="email">email</label>
      <input
        type="text"
        name="comment[email]"
        value="{{form.email}}" />
    </div>
    <div class="comment">
      <label for="comment">comment</label>
      <textarea name="comment[body]">{{ form.body }}</textarea>
    </div>

    <button type="submit">Add Comment</button>
  {% endform %}

{% endif %}