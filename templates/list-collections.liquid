{% paginate collections by 5 %}

  <h1>Collections</h1>

  {% for collection in collections %}
    <a href="{{collection.url}}">
      <h2>{{ collection.title }}</h2>
    </a>
    <p>Total products: {{ collection.all_products_count }}</p>
  {% endfor %}

  {{ paginate | default_pagination }}
{% endpaginate %}